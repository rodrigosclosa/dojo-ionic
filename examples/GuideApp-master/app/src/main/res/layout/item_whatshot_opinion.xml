<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/gruta" />

    <TextView
        android:id="@+id/nameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_picture"
        android:layout_toEndOf="@+id/user_picture"
        android:layout_toRightOf="@+id/user_picture"
        android:fontFamily="sans-serif"
        android:text="Thales Lima"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameUser"
        android:layout_alignStart="@+id/nameUser"
        android:layout_below="@+id/nameUser"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:text="12/12/2015"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text_light" />

    <ImageView
        android:id="@+id/local_picture"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gruta" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_picture"
        android:layout_alignStart="@+id/user_picture"
        android:layout_below="@+id/user_picture"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:lines="10"
        android:text="@string/lorem_ipsum"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/secondary_text" />
</RelativeLayout>