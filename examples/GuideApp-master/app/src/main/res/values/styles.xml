<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeBlue" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
    </style>

    <style name="AppThemeCyan" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryDark">@color/cyan_700</item>
    </style>

    <style name="AppThemePurple" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
    </style>

    <style name="AppTheme2" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_search_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="toolbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="toolbarThemeDark" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="toolbarThemeTransparent" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="popupTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppThemeSearch" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppThemePhoto" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/black</item> 
        <item name="colorPrimaryDark">@color/black</item> 
    </style>

    <style name="AppThemeGallery" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/black</item> 
        <item name="colorPrimaryDark">@color/black</item> 
    </style>

    <style name="toolbarDark" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
